{
	"name": "electron-vue",
	"version": "1.0.2",
	"description": "Simple boilerplate for building Electron app with Vue.",
	"main": "src/main.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node_modules/.bin/webpack-dev-server --hot",
		"build": "cross-env NODE_ENV=production node_modules/.bin/webpack",
		"start": "npm run start:dev",
		"start:dev": "cross-env NODE_ENV=development node_modules/.bin/electron .",
		"start:prod": "npm run build && cross-env NODE_ENV=production node_modules/.bin/electron .",
		"pack": "node_modules/.bin/electron-builder --dir",
		"dist": "node_modules/.bin/electron-builder",
		"dist:w": "node_modules/.bin/electron-builder -w --x64",
		"dist:m": "node_modules/.bin/electron-builder -m --x64",
		"dist:l": "node_modules/.bin/electron-builder -l --x64",
		"postinstall": "node_modules/.bin/electron-builder install-app-deps"
	},
	"build": {
		"appId": "app.id",
		"directories": {
			"output": "dist/releases"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oliverfindl/electron-vue.git"
	},
	"keywords": [
		"electron",
		"electron-builder",
		"webpack",
		"webpack-dev-server",
		"vue",
		"vue-router",
		"vuex",
		"sass",
		"node-sass",
		"boilerplate",
		"electron-vue"
	],
	"author": "Oliver Findl",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/oliverfindl/electron-vue/issues"
	},
	"homepage": "https://github.com/oliverfindl/electron-vue#readme",
	"dependencies": {
		"vue": "^2.5.16"
	},
	"devDependencies": {
		"cross-env": "^5.1.5",
		"css-loader": "^0.28.11",
		"electron": "^1.8.6",
		"electron-builder": "^20.13.3",
		"file-loader": "^1.1.11",
		"html-webpack-plugin": "^3.2.0",
		"node-sass": "^4.9.0",
		"sass-loader": "^6.0.7",
		"vue-devtools": "^3.1.9",
		"vue-loader": "^14.2.2",
		"vue-style-loader": "^4.1.0",
		"vue-template-compiler": "^2.5.16",
		"webpack": "^4.8.3",
		"webpack-cli": "^2.1.3",
		"webpack-dev-server": "^3.1.4"
	}
}
